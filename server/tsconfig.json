{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/ormconfig.ts", "ormconfig.js"],
  "exclude": [
    "node_modules",
    ".vscode",
    "**/*.spec.ts",
    "src/types/*.ts",
    "../ormconfig.ts",
    "./dist"
  ]
}
